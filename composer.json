{
  "name": "wanphp/plugins-weixin",
  "type": "wanphp-plugin",
  "description": "微信开发常用接口扩展插件,公众号、小程序、微信支付",
  "keywords": [
    "Weixin",
    "MiniProgram",
    "WeCharPay"
  ],
  "homepage": "https://www.wanphp.com",
  "license": "MIT",
  "authors": [
    {
      "name": "火子",
      "email": "wanphp@outlook.com"
    }
  ],
  "require": {
    "wanphp/installers": "*",
    "wanphp/libray-slim": "^1.0.0",
    "wanphp/libray-mysql": "^1.1.0",
    "wanphp/libray-weixin": "^1.0.0",
    "league/oauth2-server": "^8.0",
    "bacon/bacon-qr-code": "^2.0.0"
  },
  "require-dev": {
    "zircote/swagger-php": "^3.1"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true,
    "allow-plugins": {
      "wanphp/installers": true
    }
  },
  "autoload": {
    "psr-4": {
      "Wanphp\\Plugins\\Weixin\\": "/src"
    }
  }
}
